generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // שנו ל-mysql או sqlite אם צריך
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  
  // שימוש ב-Enum שהגדרנו למעלה
  role      Role     @default(USER)
  
  // שדות זמן מקצועיים
  createdAt DateTime @default(now()) // זמן יצירת המשתמש
  updatedAt DateTime @updatedAt      // עדכון אוטומטי בכל פעם שהמשתמש משתנה

  posts     Post[]
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  
  // גם לפוסטים כדאי להוסיף תיעוד זמן
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}