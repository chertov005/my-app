generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // שנו ל-mysql או sqlite אם צריך
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String?
  
  // השדה החדש שהוספנו
  // אנחנו מגדירים אותו כ-String כי ה-Hash של Bcrypt הוא מחרוזת טקסט
  password  String   
  
  role      Role     @default(USER)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  posts     Post[]
}

enum Role {
  USER
  ADMIN
}

model Post {
  id        Int      @id @default(autoincrement())
  title     String
  content   String?
  published Boolean  @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  author    User     @relation(fields: [authorId], references: [id])
  authorId  Int
}



model Contact {
  id          Int           @id @default(autoincrement())
  name        String        @db.VarChar(100)
  email       String        @db.VarChar(255)
  title       String        @db.VarChar(200)
  content     String        @db.Text
  
  // שדות ניהול (Admin Fields)
  status      ContactStatus @default(PENDING) // מעקב: האם טיפלת כבר בפנייה?
  priority    Priority      @default(LOW)     // סיווג: כמה דחוף זה?
  ipAddress   String?                         // הגנה: למניעת ספאם (בוטים)
  
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt      // מתי עדכנת את הסטטוס לאחרונה?

  @@index([email]) // אופטימיזציה: חיפוש מהיר לפי אימייל במערכת הניהול
}

// הגדרת רשימות בחירה (Enums)
enum ContactStatus {
  PENDING    // ממתין לטיפול
  IN_PROGRESS // בטיפול
  COMPLETED   // טופל
  SPAM        // ספאם
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

